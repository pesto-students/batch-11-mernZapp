{
  "name": "batch-11-mernZapp",
  "version": "1.0.0",
  "description": "Creating clone of Zapier",
  "repository": "git@github.com:pesto-students/batch-11-mernZapp.git",
  "license": "MIT",
  "private": "true",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "frontend": "yarn workspace frontend start",
    "backend": "yarn workspace backend build",
    "start": "concurrently --kill-others-on-fail 'yarn frontend' 'yarn backend'",
    "precommit:frontend": "cd frontend && npm run precommit",
    "precommit:backend": "cd backend && npm run precommit"
  },
  "dependencies": {
    "concurrently": "^5.0.0",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "eslint": "*",
    "eslint-config-airbnb": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-jsx-a11y": "*",
    "eslint-plugin-react": "*",
    "husky": "^3.1.0",
    "lint-staged": "^10.0.0-beta.6",
    "npm-run-all": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all precommit:*"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "!(*.test).js": [
      "eslint"
    ]
  }
}
